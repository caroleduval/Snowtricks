{% trans_default_domain 'FOSUserBundle' %}


<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
    <div class="well">
        <legend>Modifier mon mot de passe</legend>
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
        <fieldset>
            {#Password actuel#}
            <div class="form-group">
                {{ form_label(form.current_password, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe actuel'}})}}
                {{ form_errors(form.current_password) }}
            </div>
            {#Nouveau Password#}
            <div class="form-group">
                {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}})}}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            {#Password confirmation#}
            <div class="form-group">
                {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'control-label'}}) }}
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}})}}
                {{ form_errors(form.plainPassword.second) }}
            </div>
            <div class="form-group text-center">
                <button class="btn btn-primary" type="submit">Je valide</button>
            </div>
            {{ form_end(form) }}
        </fieldset>
    </div>
</div>

{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
        <div class="well">
            <legend>Réinitialiser mon mot de passe</legend>
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                <div class="form-group">
                    <label for="username">Email</label>
                    <input class="form-control" type="text" id="username" name="username" required="required" />
                </div>
                <div class="form-group text-center">
                    <button class="btn btn-primary" type="submit">Réinitialiser</button>
                    {#<input type="submit" value="{{ 'resetting.request.submit'|trans }}" />#}
                </div>
            </form>
        </div>
    </div>
</div>

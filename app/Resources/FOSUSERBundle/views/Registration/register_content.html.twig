{% trans_default_domain 'FOSUserBundle' %}

<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <div class="well">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal', 'novalidate': 'novalidate'}}) }}
        <fieldset>
            <legend>Créer un compte</legend>
            {#First Name#}
            <div class="form-group">
                {{ form_label(form.firstName, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}})}}
                </div>
                <div class="col-md-9 col-md-offset-3">
                    {{ form_errors(form.firstName) }}
                </div>
            </div>
            {#Name#}
            <div class="form-group">
                {{ form_label(form.name, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}})}}
                </div>
                <div class="col-md-9 col-md-offset-3">
                    {{ form_errors(form.name) }}
                </div>
            </div>
            {#Email#}
            <div class="form-group">
                {{ form_label(form.email, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}})}}
                </div>
                <div class="col-md-9 col-md-offset-3">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            {#Password#}
            <div class="form-group">
                {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}})}}
                </div>
                <div class="col-md-9 col-md-offset-3">
                    {{ form_errors(form.plainPassword.first) }}
                </div>
            </div>
            {#Password confirmation#}
            <div class="form-group">
                {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                <div class="col-md-9">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}})}}
                </div>
                <div class="col-md-9 col-md-offset-3">
                    {{ form_errors(form.plainPassword.second) }}
                </div>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>
        </fieldset>


        {{ form_end(form) }}
    </div>
</div>


{% extends "@FOSUser/layout.html.twig" %}

{% form_theme form _self %}
{% block _fos_user_registration_form_photo_row %}
    <div class="form-group">
        {{ form_widget(form) }}
    </div>
    <div class="col-xs-12">
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block title %}Créer un compte - {{ parent() }}{% endblock %}

{% block fos_user_content %}
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="well">
            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register form-horizontal', 'novalidate': 'novalidate'}}) }}
            <fieldset>
                <legend>Créer un compte</legend>
                {#First Name#}
                <div class="form-group">
                    {{ form_label(form.username, 'Prénom', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}})}}
                    </div>
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                {#Name#}
                <div class="form-group">
                    {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}})}}
                    </div>
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                {#Email#}
                <div class="form-group">
                    {{ form_label(form.email, 'E-mail', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse e-mail'}})}}
                    </div>
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                {#Password#}
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}})}}
                    </div>
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_errors(form.plainPassword.first) }}
                    </div>
                </div>
                {#Password confirmation#}
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirmer le mot de passe'}})}}
                    </div>
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_errors(form.plainPassword.second) }}
                    </div>
                </div>
                {#Photo#}
                <div class="form-group">
                    {{ form_label(form.photo, null, {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.photo, {'attr': {'class': 'form-control'}})}}
                    </div>
                    <div class="col-md-9 col-md-offset-3">
                        {{ form_errors(form.photo) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3 text-right">
                        <button class="btn btn-primary" type="submit">Je m'enregistre</button>
                    </div>
                </div>
            </fieldset>


            {{ form_end(form) }}
        </div>
    </div>


{% endblock fos_user_content %}
{% extends 'base.html.twig' %}

{% block body %}
    {% set count=trick.photos|length + trick.videos|length %}
    <div class="container">
        <div class="main">
            <div class="content">
                <!-- start details -->
                <div class="details">
                    <div class="title">
                        <h1>{{ trick.name }}</h1>
                        <h2>Groupe : {{ trick.category.name }}</h2>
                    </div>
                    <div>
                        <div class="det_text">
                            <h3>Description</h3>
                            <p class="para">{{ trick.description|nl2br }}</p>
                        </div>
                        <div class="det_text">
                            <h3>Bibliothèque multimédia</h3>
                            {% if count > 0 %}
                                <p class="para">Ce trick est illustré par
                                    {% if trick.photos|length == 1 %} 1 photo {% else %} {{ trick.photos|length }} photos {% endif %}
                                    et {% if trick.videos|length == 1 %} 1 vidéo {% else %} {{ trick.videos|length }} vidéos{% endif %}.</p>
                            {% else %}
                                <p class="para">Pas encore de contenu multimédia pour ce trick.</p>
                            {% endif %}
                        </div>
                    </div>

                    <div>
                        {% if count >0 %}
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                {% for i in 0..count-1 %}
                                    <li data-target="#myCarousel" data-slide-to="{{ i }}"></li>
                                {% endfor %}
                            </ol>
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                {% for photo in trick.photos %}
                                    <div class="item {%if loop.index == 1%} active {%endif%}">
                                        <img src="{{ asset(photo.webPath) }}" alt="{{ trick.name }}"/>
                                    </div>
                                {% endfor %}
                                {% for video in trick.videos %}
                                    <div class="item{%if trick.photos is empty and loop.index == 1%} active {%endif%}">
                                        <div class="video">
                                            {{ video.video()|raw }}
                                        </div>
                                    </div>
                                {% endfor %}
                                <!-- Left and right controls -->
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            {% endif %}

                        </div>
                    </div>
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <div class="read_more text-center">
                            <a class="btn" href="{{ path('trick_edit', {'slug': trick.slug} ) }}">Modifier</a>
                            <a class="btn" href="{{ path('trick_delete', {'slug': trick.slug} ) }}">Supprimer</a>
                        </div>
                    {% endif %}
                    <div class="clear"></div>
                </div>
            </div>
            <div class="content">
                <div class="details">
                    <div class="det_text">
                        <h3>Commentaires</h3>
                    </div>
                    <div id="comments">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                            {{ render(controller('AppBundle:Comment:add', { 'request': app.request, 'trick_id': trick.id })) }}
                        {% endif %}
                        {{ render(path('comments_list', {'trick_id': trick.id, 'page': page})) }}
                    </div>
                </div>
            </div>
            <!-- end details -->
        </div>
    </div>
{% endblock %}

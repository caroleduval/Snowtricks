{% extends 'base.html.twig' %}

{% block body %}
    <div class="container main">
        <div class="row">
            {% for trick in listTricks %}
                <div class="col-xs-12 col-sm-6 col-md-3 portfolio">
                    <div class="portfolio-wrapper">
                        <div class="thumbnail">
                        {% if not trick.photos.isEmpty() %}
                            {% set thumb = trick.getThumbnail() %}
                            <a href="{{ path('trick_view', {'id': trick.id} ) }}"><img src="{{ asset(thumb.webPath) }}"  alt="thumb.alt" /></a>
                        {% else %}
                            <img src="{{ asset('images/picto.png') }}"  alt="Pas encore de photo" title="Pas encore de photo" />
                        {% endif %}
                        </div>
                        <div class="row label-text">
                            <div class="col-xs-6 col-xs-offset-3">
                                <a href="{{ path('trick_view', {'id': trick.id} ) }}"><p class="text-title">{{ trick.name }}</p></a>
                            </div>
                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                <div class="col-xs-3">
                                    <ul class="f_nav">
                                        <li><a href="{{ path('trick_edit', {'id': trick.id} ) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a></li>
                                        <li><a href="{{ path('trick_delete', {'id': trick.id} ) }}"><i class="fa fa-trash-o" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            {% endif %}
                            <div class="col-xs-12 text-category">Groupe : {{ trick.category.name }}</div>
                        </div>
                        <div class="label-bg"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <p>
            <a class="btn btn-primary btn-lg" href="{{ path('trick_add') }}">J'ajoute un trick</a>
        </p>
        {% endif %}
    </div>
{% endblock %}



